<p id="notice"><%= notice %></p>

<h1>Character</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>ロール</th>
      <th>サムネ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.role %></td>
        <td><%= image_tag(character.image_url) if character.image.present? %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

